<h1>Cocktails</h1>

<%= link_to "New cocktail", new_cocktail_path, class: "btn btn-primary" %>
<br>
<ul list-style-type: none;>
<% @cocktails.each do |cocktail| %>
  <li><%=cocktail.name %></li>
  <li><%= link_to 'Show', cocktail %>
  <%= link_to 'Edit', edit_cocktail_path(cocktail) %>
  <%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
      <br>
<% end %>
</ul>
